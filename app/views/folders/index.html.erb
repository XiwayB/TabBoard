<div class="container">
  <div class="row">
    <% @folders.each do |folder|  %>
      <div class="col-4">
        <% if folder.photo.attached? %>
          <div class="folder-img">
            <%= cl_image_tag folder.photo.key, alt: "Folder Cover Image", width: 150, height: 100 %>
          </div>
        <% else %>
          <div class="folder-img">
            <%= cl_image_tag "x939772r4tgcnygzr8fhjbawkgx0", alt: "alttext", height: 100 %>
          </div>
        <% end %>
        <%= link_to folder.name, folder_path(folder)%>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-12">
      <hr>
      <div class="form">
        <h3>Add a new folder</h3>
        <%= simple_form_for(@folder) do |f| %>
          <%= f.input :name, placeholder: 'Add a folder name' %>
          <%= f.input :user_id, as: :integer, placeholder: 'For test purpose' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Add folder", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


