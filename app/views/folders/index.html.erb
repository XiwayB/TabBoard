<%= render 'layouts/navbar' %>
<div class="container-home">
  <div class="container-b">
      <div class="row">
        <% @folders.each do |folder|  %>
          <div class="col-6">
            <div class="card-folder">
              <div class="card-poster">
                <%= image_tag folder.coverimg, alt: "folder poster"%>
              </div>
            </div>
            <div class="card-description-b">
              <div class="card-title">
                <%= link_to folder.name, folder_path(folder)%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>

  <div class="row">
    <div class="col-12">
      <hr>
      <div class="form">
        <h3>Add a new folder</h3>
        <%= simple_form_for(@folder) do |f| %>
          <%= f.input :name, placeholder: 'Add a folder name' %>
          <%= f.input :user_id, as: :integer, placeholder: 'For test purpose' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Add folder", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


