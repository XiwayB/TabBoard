<div class="cards">
  <% @folders.each do |folder| %>
    <%= link_to folder_path(folder)  do %>
      <div class="card" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%),url(<%= @folder.photo.attached? ? cl_image_path(@folder.photo.key) : "https://res.cloudinary.com/xiway/image/upload/v1618285398/crk75x1ehaaea4ienrod.jpg"%>)" >
        <div class="goto-view">
            View
        </div>
        <div class = "goto-name">
            <%= folder.name %>
        </div>
        <!-- <img class="fav-heart" src="/assets/images/heart.png" alt="okkkkk"> -->
        <div class="fav-heart">
          <%= image_tag "heart.png", :class => 'heart-pic'%>
      </div>
      </div>
    <% end %>
  <% end %>
</div>

