  <div class="d-flex container-new justify-content-center align-items-center">
    <div class="">
      <h1 class="new-folder-heading">Get started by creating a new folder â¤´</h1>
      <div class="new-folder-gif">
      </div>
    </div>
  </div>
<% else %>
  <div class="cards">
    <% @folders.each do |folder| %>
      <!-- <div id="folder-card" data-id="<%= folder.id %>" class="card" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%),url(<%#= folder.photo.attached? ? cl_image_path(folder.photo.key) : "https://source.unsplash.com/1600x900/?nature"%>)" > -->
      <div id="folder-card" data-id="<%= folder.id %>" class="card" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%),url(<%= folder.photo.attached? ? folder.photo.service_url : "https://source.unsplash.com/1600x900/?nature"%>)" >
        <div class="goto-view">
            View
        </div>
        <div class="goto-name">
            <%= folder.name %>
        </div>
        <div class = "time">
            <%= folder.created_at.strftime("%m/%d/%Y")%>
        </div>
        <!-- <img class="fav-heart" src="/assets/images/heart.png" alt="okkkkk"> -->
        <%#= link_to like_folder_path(folder) do %>
          <div id="fav-heart" class="fav-heart" data-id="<%= folder.id %>">
            <% if folder.importance? %>
                <%= image_tag "heart.png", :class => 'heart-pic'%>
            <% else %>
                <%= image_tag "unlike.png", :class => 'heart-pic'%>
            <% end %>
          </div>
        <%# end %>
      </div>
    <% end %>
  </div>
<% end %>


