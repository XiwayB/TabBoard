<div class="cards">
  <% @folders.each do |folder| %>
    <%#= link_to folder_path(folder) do %>
      <div id="folder-card" data-id="<%= folder.id %>" class="card">
        <% if folder.photo.attached? %>
          <%= cl_image_tag folder.photo.key, alt: "coverimg" %>
        <% else %>
          <%= cl_image_tag "crk75x1ehaaea4ienrod", alt: "alttext"  %>
        <% end %>
        <div class="goto-view">
            View
        </div>
        <div class="goto-name">
            <%= folder.name %>
        </div>
        <!-- <img class="fav-heart" src="/assets/images/heart.png" alt="okkkkk"> -->
        <%#= link_to like_folder_path(folder) do %>
          <div id="fav-heart" class="fav-heart" data-id="<%= folder.id %>">
            <% if folder.importance? %>
                <%= image_tag "heart.png", :class => 'heart-pic'%>
            <% else %>
                <%= image_tag "unlike.png", :class => 'heart-pic'%>
            <% end %>
          </div>
        <%# end %>
      </div>
    <%# end %>
  <% end %>
</div>

